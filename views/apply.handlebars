<div class="container main">
    <div class="row">
        <div class="col-md-6">
            <h2 class="headers" style="font-size: 3rem">{{opportunity.name}}</h2>
            <hr />
            <h3 class="thin" style="font-size: 1.5rem; margin-bottom: 10px">{{opportunity.description}}</h3>
            <h3 class="thin" style="font-size: 1.3rem; margin-bottom: 10px; font-style: italic">Posted by: {{opportunity.User.name}}</h3>
            <h3 class="bold" style="font-size: 1rem; margin-bottom: 10px">Application Deadline: {{opportunity.deadline}}</h3>
            <hr />
        </div>
        <div class="col-md-6">
            <div class="card" style="width: 30rem;">
                <div class="card-header">
                    <h3 class="bold">Which of your collections would you like to apply?</h3>
                </div>
                <div class="card-body">
                    <select class="form-control" id="collection-select">
                        <option value="" disabled selected>Select a collection</option>
                        {{#each collections}}
                        <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>
                    <div class="row">
                        <div class="col-md-12" style="font-size: 2rem; margin-top: 25px">
                            <a class="btn btn-lg btn-light thin" data-id="{{opportunity.id}}" id="apply-btn">Apply Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/apply.js"></script>